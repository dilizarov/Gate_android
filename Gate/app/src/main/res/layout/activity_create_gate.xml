<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                tools:context="com.unlock.gate.CreateGateActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_new"
        android:id="@+id/createGate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <com.unlock.gate.utils.CustomEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createGateName"
        android:hint="@string/create_gate_hint"
        android:inputType="textShortMessage"
        android:layout_alignBottom="@+id/createGate"
        android:layout_toLeftOf="@+id/createGate"
        android:layout_toStartOf="@+id/createGate"
        android:layout_marginLeft="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>